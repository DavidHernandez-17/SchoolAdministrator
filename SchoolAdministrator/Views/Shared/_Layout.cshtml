<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Administrador Escolar </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SchoolAdministrator.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/font-awesome/css/all.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-info border-bottom box-shadow mb-5 ">
            <div class="container-fluid">
                <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-book-bookmark"></i> AE </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-house"></i><strong> Inicio</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy"><i class="fa-solid fa-bullhorn"></i><strong> Políticas</strong></a>
                        </li>
                        @if (User.Identity.IsAuthenticated != true || User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Shop"><i class="fa-solid fa-store"></i><strong> Tienda</strong></a>
                            </li>
                        }

                        @if (User.Identity.IsAuthenticated && User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Orders" asp-action="MyOrders"><i class="fa-solid fa-check-to-slot"></i><strong>Mis Pedidos</strong></a>
                            </li>
                        }


                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fa-solid fa-screwdriver-wrench"></i><strong> Administración</strong></a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Dashboard" asp-action="Index"><i class="fa fa-tachometer-alt text-danger"></i> Dashboard</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Institutions" asp-action="Index"><i class="fa-solid fa-graduation-cap text-warning"></i> Instituciones</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Subjects" asp-action="Index"><i class="fa-brands fa-accusoft text-secondary"></i> Materias</a></li>                            
                                <li><a class="dropdown-item" asp-area="" asp-controller="Users" asp-action="Index"><i class="fa-solid fa-user-group"></i> Usuarios</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Index"><i class="fa-solid fa-store text-info"></i> Productos</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Orders" asp-action="Index"><i class="fa-solid fa-check-to-slot text-success"></i> Pedidos</a></li>
                                </ul>
                            </li>
                        }
                    </ul>


                    <ul class="nav navbar-nav navbar-right">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="ChangeUser"><i class="fa-solid fa-user"></i> @User.Identity.Name</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light btn btn-outline-primary" asp-area="" asp-controller="Account" asp-action="Logout">Cerrar Sesión</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light"><i class="fa-solid fa-earth-americas"></i> Español</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light btn btn-outline-primary" asp-controller="Account" asp-action="Login">Iniciar Sesión</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - AdministradorEscolar - <a asp-area="" asp-controller="Home" asp-action="Privacy">Políticas de privacidad</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
