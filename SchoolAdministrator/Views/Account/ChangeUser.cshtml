@model SchoolAdministrator.Models.EditUserViewModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="ChangeUser" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageId" />
            <input type="hidden" asp-for="Institions" />
            <input type="hidden" asp-for="levels" />

            <partial name="_User" />

            <div class="form-group mt-2">
                <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                <a asp-action="ChangePassword" class="btn btn-outline-secondary">Cambiar Contraseña</a>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <img src="@Model.ImageFullPath" style="width:200px;height:200px;border-radius:50%" />
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script type="text/javascript">
    $(document).ready(function () {
        $("#InstitutionId").change(function () {
            debugger;
            $("#LevelId").empty();
            $("#LevelId").append('<option value="0">[Selecciona un nivel...]</option>');
            $.ajax({
                type: 'POST',
                url: '@Url.Action("GetLevels")',
                dataType: 'json',
                data: { InstitutionId: $("#InstitutionId").val() },
                success: function (levels) {
                    $.each(levels, function (i, level) {
                        $("#LevelId").append('<option value="'
                            + level.id + '">'
                            + level.name + '</option>');
                    });
                },
                error: function (ex) {
                    alert('Failed to retrieve levels.' + ex);
                }
            });
            return false;
        })

    });
</script>
}
