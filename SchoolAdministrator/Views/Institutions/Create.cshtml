@model SchoolAdministrator.Data.Entities.Institution

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>
<h4>Institución</h4>

<hr />
<flash dismissable="true" />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Levels" />
            <partial name="_Institution"/>
               
            <div class="form-group mt-2">
                <input type="submit" value="Crear" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-success">Regresar</a>
            </div>
        </form>
    </div>    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
