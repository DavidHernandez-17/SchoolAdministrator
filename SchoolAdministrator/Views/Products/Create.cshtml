@model SchoolAdministrator.Models.CreateProductViewModel

@{
    ViewData["Title"] = "Create";
}

<h3><i class="fa-solid fa-circle-plus btn-outline-primary"></i> Crear Producto</h3>

<hr />
<flash dismissable="true" />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Subjects" />

            <partial name="_CreateProduct"/>

            <div class="form-group mt-2">
                <input type="submit" value="Crear" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-success"><i class="fa-solid fa-arrow-rotate-left"></i> Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
